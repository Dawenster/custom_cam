<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <div id="logo_picture">
        <%= link_to image_tag('logo.png'), root_path, id: 'logo' %>
      </div>
      <div id="logo_text">
        <%= link_to "CustomCam", root_path, id: 'logo' %>
      </div>
      <nav>
        <ul class="nav pull-right">
            <li><%= link_to "About", about_path %></li>
          <% if current_user %>
            <% if !current_user.photographer %>
              <li><%= link_to "Add Contest", new_contest_path %></li>
            <% else current_user.photographer %>
              <li><%= link_to "Find a Contest", categories_path %></li>
            <% end %>
            <li><%= link_to "Profile: " + current_user.username, user_path(current_user) %></li>
            <li><%= link_to "Logout", session_path(session[:id]), :method => :delete %></li>
          <% else %>
            <li><%= link_to "Login", new_session_path %></li>
            <li><%= link_to "Sign up", new_user_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
