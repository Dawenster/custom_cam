<h1>Submit New Contest</h1>

<%= form_for @contest do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :category %>
  <%= f.select :category, @categories.map { |c| [c.title, c.id] } %>
  <%= f.label :description %>
  <%= f.text_area :description, :placeholder => "Enter your contest details here" %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :duration %>
  <%= radio_button_tag(:duration, 3) %>
  <%= label_tag(:duration, "3 days") %>
  <%= radio_button_tag(:duration, 5) %>
  <%= label_tag(:duration, "5 days") %>
  <%= radio_button_tag(:duration, 7) %>
  <%= label_tag(:duration, "7 days") %>
  <br>
  <%= f.submit "Submit!" %>
</div>
<% end %>

<%= link_to "Back to Index", root_path %>
