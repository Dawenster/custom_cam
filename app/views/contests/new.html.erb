<h1>Submit New Contest</h1>

<%= form_for @contest do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description%>
  <%= f.select :category, @categories.map { |c| [c.title, c.id] } %>
  <%= f.text_area :description, :placeholder => "Enter your contest details here" %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <!-- Need field for duration -->
  <br>
  <%= f.submit "Submit!" %>
</div>
<% end %>

<%= link_to "Back to Index", root_path %>
<p>(Need field for duration)</p>
